@page "/party-management"
@using CombatTracker.WebAssembly.Models
@using CombatTracker.WebAssembly.Services
@inject PartyStateService PartyState
@implements IDisposable


<PageTitle>Party Management - D&D Combat Tracker</PageTitle>

<div class="fade-in">
    <h1>Party Management</h1>

    <div class="mb-4">
        <button class="btn btn-primary" @onclick="ShowCreatePartyForm" aria-label="Create new party">
            <span class="bi bi-plus-circle me-2"></span>Create New Party
        </button>
        <button class="btn btn-outline-secondary ms-2" @onclick="SeedTestParty" aria-label="Seed test party with sample data">
            Seed Test Party
        </button>
    </div>

    @if (_showPartyForm)
    {
        <div class="card mb-4 slide-in">
            <div class="card-header">
                <h5>@(_editingParty == null ? "Create New Party" : "Edit Party")</h5>
            </div>
            <div class="card-body">
                <EditForm Model="_partyForm" OnValidSubmit="SaveParty">
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <label for="partyName" class="form-label">Party Name</label>
                        <InputText id="partyName" class="form-control" @bind-Value="_partyForm.Name" aria-required="true" />
                        <ValidationMessage For="@(() => _partyForm.Name)" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success me-2" aria-label="Save party">
                            <span class="bi bi-check-circle me-1"></span>Save
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelPartyForm" aria-label="Cancel editing">
                            <span class="bi bi-x-circle me-1"></span>Cancel
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

@if (_parties.Count == 0)
{
    <div class="alert alert-info">
        No parties created yet. Click "Create New Party" to get started!
    </div>
}
else
{
    <div class="row">
        @foreach (var party in _parties)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@party.Name</h5>
                        <div>
                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditParty(party)">Edit</button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteParty(party.Id)">Delete</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <h6>Characters (@party.Characters.Count)</h6>
                        
                        @if (party.Characters.Count == 0)
                        {
                            <p class="text-muted">No characters in this party.</p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Class</th>
                                            <th>Level</th>
                                            <th>HP</th>
                                            <th>AC</th>
                                            <th>Init</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var character in party.Characters)
                                        {
                                            <tr>
                                                <td>@character.Name</td>
                                                <td>@character.Class</td>
                                                <td>@character.Level</td>
                                                <td>@character.HpCurrent/@character.HpMax</td>
                                                <td>@character.AC</td>
                                                <td>@(character.InitiativeModifier >= 0 ? "+" : "")@character.InitiativeModifier</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => EditCharacter(party.Id, character)">Edit</button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteCharacter(party.Id, character.Id)">Delete</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        
                        <button class="btn btn-sm btn-success mt-2" @onclick="() => ShowAddCharacterForm(party.Id)">
                            <span class="bi bi-plus-circle me-2"></span>Add Character
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (_showCharacterForm)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" aria-labelledby="characterFormTitle" aria-modal="true" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content slide-in">
                <div class="modal-header">
                    <h5 id="characterFormTitle" class="modal-title">@(_editingCharacter == null ? "Add Character" : "Edit Character")</h5>
                    <button type="button" class="btn-close" @onclick="CancelCharacterForm" aria-label="Close"></button>
                </div>
                <EditForm Model="_characterForm" OnValidSubmit="SaveCharacter">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="characterName" class="form-label">Name</label>
                                <InputText id="characterName" class="form-control" @bind-Value="_characterForm.Name" aria-required="true" />
                                <ValidationMessage For="@(() => _characterForm.Name)" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="characterClass" class="form-label">Class</label>
                                <InputText id="characterClass" class="form-control" @bind-Value="_characterForm.Class" aria-required="true" />
                                <ValidationMessage For="@(() => _characterForm.Class)" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="characterLevel" class="form-label">Level</label>
                                <InputNumber id="characterLevel" class="form-control" @bind-Value="_characterForm.Level" aria-required="true" />
                                <ValidationMessage For="@(() => _characterForm.Level)" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="characterHpMax" class="form-label">HP Max</label>
                                <InputNumber id="characterHpMax" class="form-control" @bind-Value="_characterForm.HpMax" aria-required="true" />
                                <ValidationMessage For="@(() => _characterForm.HpMax)" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="characterHpCurrent" class="form-label">HP Current</label>
                                <InputNumber id="characterHpCurrent" class="form-control" @bind-Value="_characterForm.HpCurrent" aria-required="true" />
                                <ValidationMessage For="@(() => _characterForm.HpCurrent)" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="characterAC" class="form-label">AC</label>
                                <InputNumber id="characterAC" class="form-control" @bind-Value="_characterForm.AC" aria-required="true" />
                                <ValidationMessage For="@(() => _characterForm.AC)" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="characterInitiative" class="form-label">Initiative Modifier</label>
                                <InputNumber id="characterInitiative" class="form-control" @bind-Value="_characterForm.InitiativeModifier" aria-required="true" />
                                <ValidationMessage For="@(() => _characterForm.InitiativeModifier)" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="characterNotes" class="form-label">Notes (Optional)</label>
                            <InputTextArea id="characterNotes" class="form-control" @bind-Value="_characterForm.Notes" rows="3" aria-required="false" />
                            <ValidationMessage For="@(() => _characterForm.Notes)" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelCharacterForm" aria-label="Cancel">
                            <span class="bi bi-x-circle me-1"></span>Cancel
                        </button>
                        <button type="submit" class="btn btn-primary" aria-label="Save character">
                            <span class="bi bi-check-circle me-1"></span>Save Character
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}
</div>

<div class="mt-4">
    <a href="/" class="btn btn-secondary">Back to Home</a>
</div>

